header.header
	.header__bar
		.container
			.header__bar-wrap
				.search
					form.search__form
						input.search__input(type="text" name="search" method="get" placeholder="Искать")
						button.search__submit(type="submit")
							+icon("magnifier", "search__icon")
				.header__content
					ul.header__socials
						li.header__social
							a.header__social-link(href="#")
								+icon("facebook", "header__social-icon")

						li.header__social
							a.header__social-link(href="#")
								+icon("vk", "header__social-icon")

						li.header__social
							a.header__social-link(href="#")
								+icon("instagram", "header__social-icon")
								
						li.header__social
							a.header__social-link(href="#")
								+icon("phone", "header__social-icon")
					a.header__cart.cart-header(href="#")
						+icon("cart", "header__cart-icon")
						span.cart-header__title Ваша корзина
						span.cart-header__dash -
						span.cart-header__amount 0 грн.
	.header__menu
		.container
			nav.header__nav.nav-header
				ul.nav-header__list
					li.nav-header__item
						a.nav-header__link(href="./brand.html")
							h4.nav-header__title О бренде
					
					li.nav-header__item
						a.nav-header__link(href="./catalog.html")
							h4.nav-header__title Каталог

					li.nav-header__item
						a.nav-header__link(href="./")
							+icon("logo", "header__logo")

					li.nav-header__item
						a.nav-header__link(href="./contacts.html")
							h4.nav-header__title Контакты

					li.nav-header__item
						a.nav-header__link(href="./delivery.html")
							h4.nav-header__title Доставка

					li.nav-header__mobile
						button.hamburger.hamburger--spin(type="button")
							span.hamburger-box
								span.hamburger-inner

			.nav-mob
				.nav-mob__wrap
					ul.nav-mob__list
						li.nav-mob__item
							a.nav-mob__link(href="./") Главная

						li.nav-mob__item
							a.nav-mob__link(href="./catalog.html") Каталог

						li.nav-mob__item
							a.nav-mob__link(href="./contacts.html") Контакты

						li.nav-mob__item
							a.nav-mob__link(href="./delivery.html") Доставка